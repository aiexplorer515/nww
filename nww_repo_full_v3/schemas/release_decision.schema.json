{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReleaseDecision",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "candidate",
    "stage",
    "decision",
    "rationale",
    "timestamp",
    "owners"
  ],
  "properties": {
    "candidate": {
      "type": "string"
    },
    "stage": {
      "type": "string",
      "enum": [
        "CANDIDATE",
        "SHADOW",
        "A/B",
        "PROD"
      ]
    },
    "decision": {
      "type": "string",
      "enum": [
        "PROMOTE",
        "HOLD",
        "ROLLBACK"
      ]
    },
    "rationale": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "owners": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  }
}