{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Alert",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "alert_id",
    "severity",
    "event_id",
    "title",
    "message",
    "links",
    "channels",
    "createdAt",
    "versions"
  ],
  "properties": {
    "alert_id": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "LOW",
        "MEDIUM",
        "HIGH"
      ]
    },
    "event_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "report_id": {
          "type": "string"
        },
        "scenarios": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "evidence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "channels": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "createdAt": {
      "type": "string"
    },
    "versions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fpd_ver": {
          "type": "string"
        },
        "esd_ver": {
          "type": "string"
        }
      }
    }
  }
}