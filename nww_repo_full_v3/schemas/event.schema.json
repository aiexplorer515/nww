{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "schema",
    "time",
    "args",
    "lineage"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "schema": {
      "type": "string"
    },
    "time": {
      "type": "string"
    },
    "place": {
      "type": [
        "string",
        "null"
      ]
    },
    "args": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "agent_id"
      ],
      "properties": {
        "agent_id": {
          "type": "string"
        },
        "target_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "instrument": {
          "type": [
            "string",
            "null"
          ]
        },
        "status": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "persons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "orgs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "unit": {
            "type": "string"
          }
        }
      }
    },
    "lineage": {
      "type": "object",
      "required": [
        "source"
      ],
      "properties": {
        "source": {
          "type": "string"
        },
        "period": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}