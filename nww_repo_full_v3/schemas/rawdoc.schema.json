{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RawDoc",
  "type": "object",
  "required": [
    "id",
    "source",
    "fetched_at",
    "raw",
    "lineage"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "source": {
      "type": "string",
      "enum": [
        "rss",
        "api",
        "file",
        "social",
        "other"
      ]
    },
    "fetched_at": {
      "type": "string"
    },
    "raw": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "text": {
          "type": [
            "string",
            "null"
          ]
        },
        "html": {
          "type": [
            "string",
            "null"
          ]
        },
        "media_refs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "meta": {
      "type": "object"
    },
    "lineage": {
      "type": "object",
      "required": [
        "source"
      ],
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string",
          "enum": [
            "gov",
            "tierA",
            "tierB",
            "other"
          ]
        },
        "period": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}