{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ESD(Expert System Dictionary)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "domain_id",
    "frames",
    "indicators",
    "crisis_logic",
    "version"
  ],
  "properties": {
    "domain_id": {
      "type": "string"
    },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "fpd_ref"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "fpd_ref": {
            "type": "string"
          }
        }
      }
    },
    "indicators": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "metric",
          "formula",
          "ipd_ref"
        ],
        "properties": {
          "metric": {
            "type": "string"
          },
          "formula": {
            "type": "string"
          },
          "crisis_rules": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "ipd_ref": {
            "type": "string"
          }
        }
      }
    },
    "crisis_logic": {
      "type": "string"
    },
    "scenario_templates": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "harvest_templates": {
      "type": "object"
    },
    "version": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "esd_ver"
      ],
      "properties": {
        "esd_ver": {
          "type": "string"
        },
        "updated_at": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}