{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "canonicalName",
    "lineage"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "canonicalName": {
      "type": "string"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "country": {
      "type": [
        "string",
        "null"
      ]
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "org_id": {
            "type": "string"
          },
          "startDate": {
            "type": "string"
          },
          "endDate": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "lineage": {
      "type": "object",
      "required": [
        "source"
      ],
      "properties": {
        "source": {
          "type": "string"
        },
        "period": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}